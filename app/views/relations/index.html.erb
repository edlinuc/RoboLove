<h1>Listing relations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Birthdate</th>
    <th>Anniversary</th>
    <th>Intensity</th>
    <th>Eye color</th>
    <th>Hair color</th>
    <th>Height</th>
    <th>Weight</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @relations.each do |relation| %>
  <tr>
    <td><%= relation.name %></td>
    <td><%= relation.email %></td>
    <td><%= relation.birthdate %></td>
    <td><%= relation.anniversary %></td>
    <td><%= relation.intensity %></td>
    <td><%= relation.eye_color %></td>
    <td><%= relation.hair_color %></td>
    <td><%= relation.height %></td>
    <td><%= relation.weight %></td>
    <td><%= relation.user_id %></td>
    <td><%= link_to 'Show', relation %></td>
    <td><%= link_to 'Edit', edit_relation_path(relation) %></td>
    <td><%= link_to 'Destroy', relation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

